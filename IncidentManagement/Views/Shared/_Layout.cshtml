<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @*<script src="~/Scripts/modernizr-2.8.3.js"></script>*@
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
   

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="float:unset">
        <div class="container-fluid" style="width:max-content">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">@*@IncidentManagement.Resource.IncidentManagement*@</a>
                @{
                    foreach (var i in IncidentManagement.LanguageManagement.AvailableLanguages)
                    {
                        @Html.ActionLink(i.LanguageFullName, "ChangeLanguage", "Accounts", new { lang = i.LanguageCultureName }, null) <text>&nbsp;</text>
                       
                    }
                }


            </div>
            @if (User.Identity.IsAuthenticated)
            {

                if (User.Identity.Name.ToString() == "Admin")
                {
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            <li id="user" class="dropdown">
                                <a href="#">@IncidentManagement.Resource.Users<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="@Url.Action("Create", "Users")">@IncidentManagement.Resource.Create</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Edit", "Users")">@IncidentManagement.Resource.Modify</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Delete", "Users")">@IncidentManagement.Resource.Delete</a>
                                    </li>

                                </ul>
                            </li>
                            <li id="incident" class="dropdown">
                                <a href="#">@IncidentManagement.Resource.Dashboard<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="@Url.Action("Index", "IncidentDetails")">@IncidentManagement.Resource.AllIncidents</a>
                                    </li>
                                    <li id="sub-dropdown" class="dropdown">
                                        <a href="#">@IncidentManagement.Resource.Priority<span style="margin-left: 80px" class="glyphicon glyphicon-chevron-right"></span></a>
                                        <ul id="sub-dropdown-menu" class="dropdown-menu">
                                            <li>
                                                <a href="@Url.Action("Critical", "IncidentDetails")">@IncidentManagement.Resource.Critical</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Medium", "IncidentDetails")">@IncidentManagement.Resource.Medium</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Low", "IncidentDetails")">@IncidentManagement.Resource.Low</a>
                                            </li>
                                    </li>
                                </ul>
                            </li>


                        </ul>
                       
                        <li style="margin-left:700px">
                            <a>@IncidentManagement.Resource.Hello - @User.Identity.Name</a>
                        </li>
                        <li>@Html.ActionLink(IncidentManagement.Resource.Logout, "Logout", "Accounts")</li>
                    </div>
                }
                else
                {
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li id="user" class="dropdown">
                    <a>@IncidentManagement.Resource.Users<span class="caret"></span></a>

                </li>
                <li id="incident" class="dropdown">
                    <a href="#">@IncidentManagement.Resource.Dashboard<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("Index", "IncidentDetails")">@IncidentManagement.Resource.AllIncidents</a>
                        </li>
                        <li id="sub-dropdown" class="dropdown">
                            <a href="#">@IncidentManagement.Resource.Priority<span style="margin-left: 80px" class="glyphicon glyphicon-chevron-right"></span></a>
                            <ul id="sub-dropdown-menu" class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("Critical", "IncidentDetails")">@IncidentManagement.Resource.Critical</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Medium", "IncidentDetails")">@IncidentManagement.Resource.Medium</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Low", "IncidentDetails")">@IncidentManagement.Resource.Low</a>
                                </li>
                        </li>
                    </ul>
                </li>


            </ul>
            <li style="margin-left:900px">
                <a>@IncidentManagement.Resource.Hello - @User.Identity.Name</a>
            </li>

            <li>@Html.ActionLink(IncidentManagement.Resource.Logout, "Logout", "Accounts")</li>
        </div>

                }




            }





        </div>
     
    </nav>

    <div class="container body-content">
        @RenderSection("scripts", required: false)
        @RenderBody()
        <hr />
        @* <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
